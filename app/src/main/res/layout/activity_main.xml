<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/category_happy_button"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="#9B27AF"
            android:src="@drawable/baseline_emoji_emotions_24"
            android:tag="category_happy"
            app:tint="#ffffff" />

        <ImageButton
            android:id="@+id/category_nature_button"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="#9B27AF"
            android:src="@drawable/baseline_sunny_24"
            android:tag="category_nature"
            app:tint="#630D71" />

        <ImageButton
            android:id="@+id/category_life_button"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="#9B27AF"
            android:src="@drawable/baseline_looks_24"
            android:tag="category_life"
            app:tint="#630D71" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp">

        <TextView
            android:id="@+id/hello_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá, usuário!"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phrase_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textAlignment="center"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:background="#9C27B0"
                android:orientation="horizontal" />
        </LinearLayout>

        <Button
            android:id="@+id/gen_phrase_button"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9C27B0"
            android:text="NOVA FRASE" />
    </LinearLayout>
</LinearLayout>